 @model ForumW24_V2.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Edition</h1>

<h4>Discussion</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <input type="hidden" asp-for="CatId" />
            <div class="form-group">
                <label asp-for="CatNom" class="control-label">Titre de la discussion</label>
                <input asp-for="CatNom" class="form-control" />
                <span asp-validation-for="CatNom" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CatImg" class="control-label">Image</label>
                <input type="file" asp-for="CatImg" class="form-control" />
                <span asp-validation-for="CatImg" class="text-danger"></span>
            </div>
        </div>
     </div>
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="CatDesc" class="control-label">Description</label>
                <textarea asp-for="CatDesc" class="form-control"></textarea>
                <span asp-validation-for="CatDesc" class="text-danger"></span>
            </div>
        </div>
    </div>
            <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="CatActif" />Actif/Inactif
            </label>
        </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary m-3" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
